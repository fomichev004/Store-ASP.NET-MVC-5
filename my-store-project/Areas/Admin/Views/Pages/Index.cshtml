@model IEnumerable<my_store_project.Models.ViewModels.Pages.PageVM>

@{
    ViewBag.Title = "Pages";
}

    <h2>Pages</h2>
    
@if (TempData["Successful message"] != null)
{
    <div class="alert alert-success">
        @TempData["Successful message"]
    </div>
}

<p>
    @Html.ActionLink("Create New Page", "AddPage", "", new { @class = "btn btn-success"})
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Slug
        </th>
        <th>
           SideBar
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasSlideBar)
        </td>
        <td>
            //Метод деталей
            @Html.ActionLink("Edit", "EditPage", new { id=item.Id }) |
            //Метод редактирования
            @Html.ActionLink("Details", "PageDetails", new { id=item.Id }) |

            @Html.ActionLink("Delete", "DeletePage", new { id=item.Id })
        </td>
    </tr>
}

</table>
