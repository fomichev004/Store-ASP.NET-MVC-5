<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin Area</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
     <div class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
           @Html.ActionLink("Dashboard", "Index", "Dashboard", "", new {@class = "navbar-brand"})
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        @Html.ActionLink("Pages", "Index", "Pages", "", new {@class = "nav-link"})
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Sidebar", "EditSidebar", "Pages", "", new {@class = "nav-link"})
                    </li>
                    <li class="nav-item">
                       <!-- <a class="nav-link" href="#">Pricing</a> -->  
                    </li>
                </ul>

                 <!--New right menu-->   
                <ul class="navbar-nav ml-auto ">
                    <li>
                        <a href="#" class="btn btn-primary" target="_blank" role="button">Shoping Cart</a>
                    </li>
                    
                </ul>

                 <!--<span class="navbar-text">
                    Navbar text with an inline element
                </span>-->  
            </div>
        </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - мое приложение ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")

    <!-- Подклчаем бандл к сайту-->
    @Scripts.Render("~/bundles/jqueryui")

    @Scripts.Render("~/bundles/bootstrap")
    <!--(7)-->
    @Scripts.Render("~/bundles/ckeditor")
    
    @RenderSection("scripts", required: false)

</body>
</html>
